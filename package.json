{
  "name": "customers-typescript-api",
  "version": "1.0.0",
  "description": "NodeJS API + Typescript + MicroServicesArch",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon ./src/server.ts",
    "start": "nodemon ./dist/server.js",
    "prod": "npm run build && npm run start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/correadev/customers-typescript-api.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "microservice-architecture"
  ],
  "author": "correadev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/correadev/customers-typescript-api/issues"
  },
  "homepage": "https://github.com/correadev/customers-typescript-api#readme",
  "dependencies": {
    "@types/express": "^4.17.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.5.1",
    "express": "^4.17.1",
    "mongoose": "^5.7.5",
    "nodemon": "^1.19.4"
  }
}
